{
	"name": "jshint",
	"version": "0.1.0",
	"publisher": "vscode",
	"engines": { "vscode": "*" },
	"description": "JS Hint Integration for VS",
	"private": true,
	"dependencies": {
		"vscode-languageworker": "^0.2.0"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "JSHint configuration",
			"properties": {
				"jshint.enable": {
					"type": "boolean",
					"default": false,
					"description": "Control whether jshint is enabled for JavaScript files or not."
				},
				"jshint.options": {
					"type": "object",
					"default": {},
					"description": "The jshint options object to provide args to the jshint command."
				}
			}
		},
		"languageWorkers": {
			"activate": ["onLanguage:javascript", "onLanguage:javascriptreact"],
			"executable": {
				"run": {
					"nodeModule": "lib/jshint.js"
				},
				"debug": {
					"nodeModule": "lib/jshint.js",
					"execArgv": ["--debug-brk=6001"]
				}
			},
			"watchFiles": "**/.jshintrc",
			"settings": "jshint"
		}
	}
}